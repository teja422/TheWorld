<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>The World- @ViewBag.Title</title>
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <div id="sidebar">
        <img src="~/img/conevo-logo.jpg" alt="conevo-logo" class="headshot" />
        <span id="username">Conevo Technologies</span>
        <ul class="menu">
            <li class="active"><a asp-controller="App" asp-action="Home">Home</a></li>
            <li><a asp-controller="App" asp-action="About">About</a></li>
            <li><a asp-controller="App" asp-action="Contact">Contact</a></li>
        </ul>
    </div>

    <div id="wrapper">
        <div id="main">
            <div>
                <button id="sidebarToggle">Toggle Menu</button>
            </div>
            <div>
                @RenderBody()
            </div>
        </div>
        <div id="footer">
            &copy; 2016 The World Ltd.
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js"></script>
</body>
</html>